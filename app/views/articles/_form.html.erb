<% if @article.title %>
  <h1> Updating <%= @article.title %> </h1>
  <% end %>

<form method='post' action='/articles'>
  <input  type="hidden" 
          name="authenticity_token" 
          value="<%= form_authenticity_token %>">
  <input type="text"
         name="title" 
         <% if @article.title %>
         value = '<%=@article.title %>'
         <% end %>
         >

  <textarea name="body"
             <% if @article.body %>
             value = '<%=@article.body %>'
             <% end %>>
  </textarea>
  <button type="submit"
          name="submit">Submit</button>
</form>